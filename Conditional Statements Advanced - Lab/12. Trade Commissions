using System;

namespace _12._Trade_Commissions
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string town = Console.ReadLine();
            double sales = double.Parse(Console.ReadLine());
            if (town == "Sofia")
            {
                if (sales >= 0 && sales <= 500)
                {
                    double commission = 0.05 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 500 && sales <= 1000)
                {
                    double commission = 0.07 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 1000 && sales <= 10000)
                {
                    double commission = 0.08 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 10000)
                {
                    double commission = 0.12 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else
                {
                    Console.WriteLine("error");
                }
            }
            else if (town == "Varna")
            {
                if (sales >= 0 && sales <= 500)
                {
                    double commission = 0.045 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 500 && sales <= 1000)
                {
                    double commission = 0.075 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 1000 && sales <= 10000)
                {
                    double commission = 0.10 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 10000)
                {
                    double commission = 0.13 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else
                {
                    Console.WriteLine("error");
                }


            }
            else if (town == "Plovdiv")
            {
                if (sales >= 0 && sales <= 500)
                {
                    double commission = 0.055 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 500 && sales <= 1000)
                {
                    double commission = 0.08 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 1000 && sales <= 10000)
                {
                    double commission = 0.12 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else if (sales > 10000)
                {
                    double commission = 0.145 * sales;
                    Console.WriteLine("{0:F2}", commission);
                }
                else
                {
                    Console.WriteLine("error");
                }
            }
            else
            {
                Console.WriteLine("error");
            }
        }
    }
}
